@model LabbASPclient.Models.Kategori

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" type="text/css" href="~/css/DeleteCss.css">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=B612:ital@1&display=swap" rel="stylesheet">
<br />
<br />
<h1>Radera kategori</h1>
<br />
<h3>Är du säker på att du vill radera?</h3>
<div>

    <table class="table table-dark table-hover">
        <tr>
            <th>
                Id
            </th>
            <th>
                Kategorinamn
            </th>
        </tr>
        <tbody>
        <td>@Html.DisplayFor(model => model.KategoriId)</td>
        <td>@Html.DisplayFor(model => model.Kategorinamn)</td>
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="KategoriId" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a class="a" asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
