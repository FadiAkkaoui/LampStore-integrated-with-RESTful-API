@model LabbASPclient.Models.Artiklar

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" type="text/css" href="~/css/DeleteCss.css">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=B612:ital@1&display=swap" rel="stylesheet">
<br />
<br />
<h1>Radera artikel</h1>
<br />
<h3>Är du säker på att du vill radera?</h3>
<table class="table table-dark table-hover">
    <tr>
        <th>
            Id
        </th>
        <th>
            Produktnamn
        </th>
        <th>
            Produktbeskrivning
        </th>
        <th>
            Pris
        </th>
        <th>
            Antal
        </th>
        <th>
            Tillverkare
        </th>
    </tr>
    <tbody>
    <td>@Html.DisplayFor(model => model.Id)</td>
    <td>@Html.DisplayFor(model => model.Produktnamn)</td>
    <td>@Html.DisplayFor(model => model.Produktbeskrivning)</td>
    <td>@Html.DisplayFor(model => model.Pris)</td>
    <td>@Html.DisplayFor(model => model.Antal)</td>
    <td>@Html.DisplayFor(model => model.Tillverkare)</td>
    </tbody>
</table>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Radera" class="btn btn-danger" /> |
    <a class="a" asp-action="Index">Tllbaka till listan</a>
</form>
